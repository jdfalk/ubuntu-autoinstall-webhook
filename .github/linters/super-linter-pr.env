FIX_GO_RELEASER=true
FIX_GROOVY=true
FIX_JAVA=true
FIX_JAVASCRIPT_ES=true
FIX_JAVASCRIPT_STANDARD=true
FIX_JSCPD=true
FIX_JSX=true
FIX_KUBERNETES_KUBECONFORM=true
FIX_LATEX=true
FIX_LUA=true
FIX_NATURAL_LANGUAGE=true
FIX_OPENAPI=true
FIX_PERL=true
FIX_PHP=true
FIX_PHP_BUILTIN=true
FIX_PHP_PHPSTAN=true
FIX_PHP_PSALM=true
FIX_POWERSHELL=true
FIX_PYTHON_PYLINT=true
FIX_PYTHON_FLAKE8=true
FIX_PYTHON_MYPY=true
FIX_R=true
FIX_RAKU=true
FIX_RUST_2015=true
FIX_RUST_2018=true
FIX_RUST_CLIPPY=true
FIX_SNAKEMAKE_LINT=true
FIX_SNAKEMAKE_SNAKEFMT=true
FIX_STATES=true
FIX_SQL=true
FIX_SQLFLUFF=true
FIX_TEKTON=true
FIX_TERRAFORM_TERRASCAN=true
