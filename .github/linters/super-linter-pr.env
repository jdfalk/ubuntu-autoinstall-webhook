# Super-Linter PR Automation Configuration (Auto-Fix)
# This configuration is used by the PR automation workflow to automatically
# fix code style issues and commit changes back to the PR branch.

# =============================================================================
# CORE CONFIGURATION
# =============================================================================
VALIDATE_ALL_CODEBASE=false
DEFAULT_BRANCH=main
DISABLE_ERRORS=false
LOG_LEVEL=INFO
CREATE_LOG_FILE=true

# =============================================================================
# AUTO-FIX MODE - ENABLE FIXING FOR SUPPORTED LINTERS
# =============================================================================

# Bash/Shell - Enable formatting
FIX_BASH=true
FIX_BASH_EXEC=false
FIX_SHELL_SHFMT=true

# Code formatters
FIX_CLANG_FORMAT=true
FIX_CSS=true
FIX_DART=true

# EditorConfig
FIX_EDITORCONFIG=true

# Environment files
FIX_ENV=true

# GitHub Actions
FIX_GITHUB_ACTIONS=true

# Go formatting
FIX_GO=true

# HTML formatting
FIX_HTML=true

# Java formatting
FIX_GOOGLE_JAVA_FORMAT=true

# JavaScript/TypeScript formatting
FIX_JAVASCRIPT_PRETTIER=true
FIX_TYPESCRIPT_PRETTIER=true

# JSON formatting
FIX_JSON=true
FIX_JSONC=true

# Kotlin formatting
FIX_KOTLIN=true

# Markdown formatting
FIX_MARKDOWN=true

# PHP formatting
FIX_PHP_PHPCS=true

# Protocol Buffers
FIX_PROTOBUF=true

# Python formatting
FIX_PYTHON_BLACK=true
FIX_PYTHON_ISORT=true
FIX_PYTHON_RUFF=true

# Ruby formatting
FIX_RUBY=true

# Rust formatting
FIX_RUST_2021=true

# Scala formatting
FIX_SCALAFMT=true

# Terraform formatting
FIX_TERRAFORM_FMT=true

# XML formatting
FIX_XML=true

# YAML formatting
FIX_YAML=true

# =============================================================================
# DISABLE AUTO-FIX FOR COMPLEX LINTERS
# =============================================================================
# These linters perform complex analysis that should not auto-fix

FIX_ANSIBLE=true
FIX_ARM=true
FIX_CPP=true
FIX_CHECKOV=true
FIX_CLOJURE=true
FIX_CLOUDFORMATION=true
FIX_COFFEESCRIPT=true
FIX_CSHARP=true
FIX_DOCKERFILE_HADOLINT=true
FIX_GHERKIN=true
